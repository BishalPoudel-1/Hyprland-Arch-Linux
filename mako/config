# Mako Notification Daemon Configuration
# Catppuccin Macchiato Theme
# General Settings

font=JetBrainsMono Nerd Font 10
width=350
height=100
margin=10,10,10
padding=15
border-size=2
border-radius=10
default-timeout=2000
layer=overlay
anchor=bottom-center

# Default Style (for normal notifications)
background-color=#24273a
text-color=#cad3f5
border-color=#c6a0f6
progress-color=over #8aadf4

# Style for Low Urgency notifications (volume, brightness)
# This will inherit from the default style
[urgency=low]
border-color=#494d64
default-timeout=1500

# Style for Critical Urgency notifications (e.g., power unplugged)
# This style will make the notification stand out
[urgency=critical]
background-color=#1e2030
text-color=#ed8796
border-color=#ed8796
default-timeout=4000
